{
  "manifest_version": 3,
  "name": "Shakes & Fidget Routine Helper",
  "version": "1",
  "description": "SFGame daily helper. Make Life easier!",
  "permissions": ["webRequest", "alarms"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "src/background.js",
    "type": "module"
  },
  "icons": {
    "16": "icon.png",
    "32": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["*://*.sfgame.net/*"],
      "js": ["src/content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": "icon.png"
  }
  
}
