{
  "manifest_version": 3,
  "name": "Shakes & Fidget Routine Helper",
  "version": "1.1",
  "description": "SFGame daily helper. Make Life easier!",
  "permissions": ["webRequest",  "alarms"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "scripts/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["*://*.sfgame.net/*"],
      "js": ["scripts/content.js"],
      "run_at": "document_idle"
    }
  ]
}
